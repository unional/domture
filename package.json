{
  "name": "domture",
  "description": "Test fixture with jsdom + SystemJS + Node",
  "version": "0.7.2",
  "main": "dist/es5/index.js",
  "module": "dist/es2015/index.js",
  "typings": "dist/es5/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-es5",
    "build-es2015": "tsc -p tsconfig.es2015.json",
    "build-es5": "tsc -p tsconfig.es5.json",
    "clean": "rimraf dist/es5 dist/es2015",
    "dc": "npm run dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev -i plugin-typescript -i systemjs -i @types/systemjs -i @types/jsdom && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json --type-check \"src/**/*.ts\"",
    "postpublish": "git push",
    "preversion": "git pull && npm run verify",
    "version": "npm run remove-spec",
    "verify": "npm run lint && npm run coverage && npm run dependency-check",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "remove-spec": "rimraf dist/es5/**/*.spec.*",
    "test": "npm run clean && tsc && ava",
    "watch": "npm run clean && node scripts/watch.js"
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "homepage": "https://github.com/unional/jsdom-systemjs",
  "bugs": {
    "url": "https://github.com/unional/jsdom-systemjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/unional/jsdom-systemjs.git"
  },
  "license": "MIT",
  "ava": {
    "files": [
      "dist/es5/**/*.spec.js"
    ],
    "source": [
      "scripts/*.js",
      "dist/es5/**/*.js",
      "*.json"
    ],
    "require": [
      "./scripts/setup-browser-env.js",
      "./scripts/setup-test-env.js"
    ]
  },
  "nyc": {
    "exclude": [
      "scripts",
      "**/*.spec.*",
      "**/fixtures/**/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^8.0.31",
    "aurelia-logging-color": "^0.5.5",
    "ava": "^0.22.0",
    "dependency-check": "^2.9.1",
    "eslint": "^4.8.0",
    "eslint-config-unional": "^0.2.3",
    "global-store": "^0.7.1",
    "make-error": "^1.3.0",
    "nyc": "^11.2.1",
    "rimraf": "^2.6.2",
    "tslint": "^5.7.0",
    "tslint-config-unional": "^0.8.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "@types/jsdom": "^11.0.2",
    "@types/systemjs": "^0.20.5",
    "aurelia-logging": "^1.3.1",
    "deep-extend": "^0.5.0",
    "file-url": "^2.0.2",
    "jsdom": "^11.3.0",
    "plugin-typescript": "^7.1.0",
    "systemjs": "^0.20.19",
    "unpartial": "^0.1.0"
  }
}
